<h1>Eat Da Burger!</h1>

<div class="card col-4">
    <h2 id="cardHeader"><img src="https://i.gifer.com/tbb.gif"></h2>

<h2>Burgers Already Eaten!</h2>

<ul>
  {{#each burgers}}
  {{#unless devour}}
  {{> burgers/burger-block devoured=true}}
  {{/unless}}
  {{/each}}
</ul>

</div>
<h2>Burgers to Eat</h2>

<ul>
  {{#each burgers}}
  {{#if devour}}
  {{> burgers/burger-block devoured=false}}
  {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">



  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">Hungry?</label><br>
    <input type="radio" name="devoured" value="1" checked> Wait to Devour<br>
    <input type="radio" name="devoured" value="0"> Devour
  </div>

  <button type="submit">Add Burger</button>
</form>